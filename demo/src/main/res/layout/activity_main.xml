<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:schedule="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.acbelter.scheduleview.ScheduleView
      android:id="@+id/schedule"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:padding="8dp"
      schedule:itemPaddingLeft="8dp"
      schedule:itemPaddingRight="8dp"
      schedule:internalPaddingTop="8dp"
      schedule:internalPaddingBottom="8dp"
      schedule:timeMarksDistance="40dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="2dp">

        <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Add new item"
          android:onClick="addNewItem"/>

        <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Set null adapter"
          android:onClick="setNullAdapter"/>
    </LinearLayout>
</LinearLayout>